<%= link_to "< back", :back, class: "back-button" %>

<div class="profile-edit-container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6 text-center header-container">
      <h1 class="custom-header">Edit Your Profile</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6 text-center form-container">
      <div class="profile-picture-container">
        <label for="profile-picture-upload" class="profile-picture-link">
          <div class="profile-picture">
            <%= cl_image_tag(current_user.profile_photo.key,:gravity=>"face", :height=>200, :width=>200, :crop=>"fill",:radius=>"max") %>
          </div>
        </label>
      </div>
        <%= simple_form_for(current_user) do |f| %>
          <%= f.input :profile_photo, as: :file, label: 'Upload a profile picture'%>
          <%= f.input :description, label: 'Describe Yourself!', as: :text %>
          <div class="input-spacing"></div>
          <%= f.input :description, label: 'Let Us Know About Your Pup!', as: :text %>
          <div class="form-spacing"></div>
          <%= f.submit "Update Profile", class: "submit-button" %>
        <% end %>
    </div>
  </div>
</div>
