<h1><%= current_user.username  %></h1>
<p>Manage your account</p>

<h3> My Account </h3>

<%= link_to "Contact Information", my_account_path %>
<p><b> Change Password </b></p>
<%= simple_form_for(current_user, html: { method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } }) do |f| %>
  <%= f.button :submit, "Delete Account", class: "btn btn-danger" %>
<% end %>

<!-- tag before the code and a -->

<%= simple_form_for(current_user, url: change_password_patch_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :password, autocomplete: "off", required: true, input_html: { autocomplete: "new-password" } %>
  <%= f.input :password_confirmation, autocomplete: "off", required: true, input_html: { autocomplete: "new-password" } %>

  <div class="form-actions">
    <%= f.button :submit , class: "btn btn-primary" %>
  </div>
<% end %>
